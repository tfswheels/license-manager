# Server Configuration
PORT=3001
NODE_ENV=development
APP_URL=https://api.digikeyhq.com

# MySQL Database (Railway MySQL)
DB_HOST=your_database_host
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=railway
DB_PORT=3306

# Shopify App Configuration
# Get these from your Shopify Partner Dashboard: https://partners.shopify.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,read_orders,read_customers
SHOPIFY_REDIRECT_URI=https://api.digikeyhq.com/auth/callback
SHOPIFY_WEBHOOK_SECRET=your_random_webhook_secret

# For Development
SHOPIFY_SHOP_NAME=your-development-store.myshopify.com

# SendGrid Email Service
# Get API key from: https://app.sendgrid.com/settings/api_keys
# Note: Emails are sent from FROM_EMAIL with reply-to automatically set to shop email (can be overridden in settings)
MAIL_API_KEY=your_sendgrid_api_key
FROM_EMAIL=mail@digikeyhq.com
FROM_NAME=DigiKey HQ

# Admin Alerts
ADMIN_EMAIL=admin@digikeyhq.com
LOW_INVENTORY_THRESHOLD=10

# Frontend URL (for CORS and redirects)
# Development: http://localhost:5173
# Production: https://digikeyhq.com
FRONTEND_URL=https://digikeyhq.com